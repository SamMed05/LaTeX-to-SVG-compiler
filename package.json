{
  "name": "latextosvg",
  "version": "0.1.0",
  "private": true,
  "description": "Web app to quickly compile LaTeX TikZ/pgfplots to formats like PDF and SVG with live preview.",
  "main": "electron/main.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "electron:dev": "electron .",
    "icons": "node ./scripts/generate-icons.js",
    "clean": "rimraf dist",
    "preelectron:build": "npm run icons",
    "electron:build": "electron-builder --win --x64"
  },
  "author": "Samuel Mediani",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "rimraf": "^5.0.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.4",
    "npm-run-all": "^4.1.5"
  },
  "build": {
    "appId": "com.samuel.latextosvg",
    "productName": "LaTeX to SVG",
    "directories": {
      "buildResources": "build"
    },
    "icon": "build/icon.ico",
    "artifactName": "LaTeX-to-SVG-${version}-${os}-${arch}.${ext}",
    "files": [
      "electron/**/*",
      "public/**/*",
      "server/lib/**/*",
      "package.json",
      "LICENSE"
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "artifactName": "LaTeX-to-SVG-${version}-win-x64-setup.${ext}",
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    },
    "portable": {
      "artifactName": "LaTeX-to-SVG-${version}-win-x64-portable.${ext}"
    }
  }
}
